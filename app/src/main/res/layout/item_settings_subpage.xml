<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/settingContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical" android:background="?attr/selectableItemBackground" android:clickable="true" android:focusable="true">

    <ImageView android:id="@+id/settingIcon" android:layout_width="24dp" android:layout_height="24dp" android:contentDescription="Icon" app:tint="?attr/colorOnSurfaceVariant" />

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:paddingStart="16dp" android:paddingEnd="16dp">

        <TextView android:id="@+id/settingTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="16sp" android:textColor="?attr/colorOnSurface" />

        <TextView android:id="@+id/settingSubtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14sp" android:textColor="?attr/colorOnSurfaceVariant" android:paddingTop="2dp" />

    </LinearLayout>

    <!-- <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/icon_arrow_right" android:contentDescription="Navigate" app:tint="?attr/colorOnSurfaceVariant" /> -->

</LinearLayout>
