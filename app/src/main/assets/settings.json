          "subtitle": "Enable dark theme",
          "icon": "icon_theme",
          "default": false,
          "key": "pref_dark_mode"
        },
        {
          "type": "selection",
          "id": "theme_color",
          "title": "Theme Color",
          "subtitle": "Choose accent color",
          "icon": "icon_palette",
          "key": "pref_theme_color",
          "options": [
            { "value": "blue", "label": "Blue" },
            { "value": "purple", "label": "Purple" },
            { "value": "green", "label": "Green" },
            { "value": "red", "label": "Red" }
          ],
          "default": "blue"
        }
      ]
    },
    {
      "id": "notifications",
      "title": "NOTIFICATIONS",
      "items": [
        {
          "type": "toggle",
          "id": "notifications_enabled",
          "title": "Enable Notifications",
          "subtitle": "Receive app notifications",
          "icon": "icon_notifications",
          "default": true,
          "key": "pref_notifications_enabled"
        },
        {
          "type": "toggle",
          "id": "sound_enabled",
          "title": "Sound",
          "subtitle": "Play notification sounds",
          "icon": "icon_sound",
          "default": true,
          "key": "pref_sound_enabled"
        },
        {
          "type": "subpage",
          "id": "advanced_notifications",
          "title": "Advanced Settings",
          "subtitle": "Configure detailed notification preferences",
          "icon": "icon_settings",
          "page": "notifications_advanced"
        }
      ]
    },
    {
      "id": "privacy",
      "title": "PRIVACY & SECURITY",
      "items": [
        {
          "type": "toggle",
          "id": "analytics_enabled",
          "title": "Analytics",
          "subtitle": "Help improve the app",
          "icon": "icon_analytics",
          "default": false,
          "key": "pref_analytics_enabled"
        },
        {
          "type": "toggle",
          "id": "crash_reports",
          "title": "Crash Reports",
          "subtitle": "Send crash reports automatically",
          "icon": "icon_bug",
          "default": true,
          "key": "pref_crash_reports"
        }
      ]
    }
