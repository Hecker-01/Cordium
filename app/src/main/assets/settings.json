  "subpages": {
    "notifications_advanced": {
      "title": "Advanced Notifications",
      "categories": [
        {
          "id": "channels",
          "title": "NOTIFICATION CHANNELS",
          "items": [
            {
              "type": "toggle",
              "id": "messages_channel",
              "title": "Messages",
              "subtitle": "Notifications for new messages",
              "default": true,
              "key": "pref_channel_messages"
            },
            {
              "type": "toggle",
              "id": "updates_channel",
              "title": "Updates",
              "subtitle": "App update notifications",
              "default": true,
              "key": "pref_channel_updates"
            },
            {
              "type": "selection",
              "id": "priority",
              "title": "Priority",
              "subtitle": "Notification importance",
              "key": "pref_notification_priority",
              "options": [
                { "value": "low", "label": "Low" },
                { "value": "default", "label": "Default" },
                { "value": "high", "label": "High" }
              ],
              "default": "default"
            }
          ]
        }
      ]
    }
